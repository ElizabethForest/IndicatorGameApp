<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/activity_main"
    android:background="@drawable/road_anim">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/direction"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/indicator_left"
        android:src="@drawable/left_ind"
        android:visibility="invisible"
        android:layout_alignTop="@+id/indicator_right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/indicator_right"
        android:src="@drawable/right_ind"
        android:visibility="invisible"
        android:layout_below="@+id/score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: \t 0"
        android:id="@+id/score"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/flat_ind"
        android:src="@drawable/flat"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/score"
        android:layout_alignStart="@+id/score" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:id="@+id/up_ind"
        android:src="@drawable/up_ind"
        android:layout_alignBottom="@+id/flat_ind"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/down_ind"
        android:src="@drawable/down_ind"
        android:layout_alignTop="@+id/flat_ind"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/heart1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/heart"
        android:layout_above="@+id/indicator_left" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/heart2"
        android:src="@drawable/heart"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/heart1"
        android:layout_marginLeft="1dp"
        android:layout_above="@+id/indicator_left" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/heart3"
        android:src="@drawable/heart"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/heart2"
        android:layout_marginLeft="1dp"
        android:layout_above="@+id/indicator_left" />


</RelativeLayout>
